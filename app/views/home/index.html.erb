<div class="row mt-4 mb-4">
  <div class="col">
    <h1>Create gif <span class="pull-right label label-default">:)</span></h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="link-tab" data-toggle="tab" href="#link" role="tab" aria-controls="link" aria-selected="true">URL Link</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Upload a video</a>
      </li>
    </ul>
  </div>
  <div class="w-100"></div>
  <div class="col">
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="link" role="tabpanel" aria-labelledby="link-tab">
        <div class="row">
          <div class="col">
            <div class="form-group mt-4">
              <h5> ADD ANY URL <small class="text-muted">We support YouTube and Vimeo links!</small></h5>
              <div class="input-group mb-3 mt-2">
                <input type="text" class="form-control" placeholder="Copy and paste video url" id="link-input">
                <div class="input-group-append">
                  <button class="btn btn-outline-secondary" type="button" id="button-addon2">Load</button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row video-details d-none">
          <div class="col-6" id="video-div">
            <div id="plyr-video" data-plyr-provider="youtube" data-plyr-embed-id="jhyANGHDDH8"></div>
          </div>
          <div class="col-6">
            <div class="row">
              <div class="form-group">
                <h5 class="video-title"></h5>
              </div>
            </div>
            <div class="row mt-4">
              <label for="amount">Start time - Duration range:</label>
            </div>
            <div class="row mt-4">
              <div class="demo-output">
                <input class="range-slider" type="hidden" value="0,0"/>
              </div>
            </div>
            <div class="row mt-4">
              <button class="btn btn-outline-secondary" type="button" id="button-create">Create!</button>
            </div>
          </div>
        </div>
      </div>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">...</div>
    </div>
  </div>
</div>


<div class="row <%= 'd-none' if @gifs.empty? %>">
  <div class="col">
    <h5 class="my-4 text-center text-lg-left">Gallery</h5>
    <div class="row text-center text-lg-left">
      <% @gifs.each do |gif| %>
      <div class="col-lg-3 col-md-4 col-xs-6">
          <a href="#" class="d-block mb-4 h-100">
            <img class="img-fluid img-thumbnail" src="<%= gif.url %>" alt="">
          </a>
      </div>
      <% end %>
    </div>
  </div>
</div>
